{
	"$schema": "../node_modules/@tauri-apps/cli/schema.json",
	"build": {
		"beforeBuildCommand": "",
		"beforeDevCommand": "",
		"devPath": "../dist",
		"distDir": "../dist"
	},
	"package": {
		"productName": "Nodus Security Platform",
		"version": "8.0.0"
	},
	"tauri": {
		"allowlist": {
			"all": false,
			"shell": {
				"all": false,
				"open": false
			},
			"dialog": {
				"all": false,
				"ask": true,
				"confirm": true,
				"message": true,
				"open": false,
				"save": false
			},
			"notification": {
				"all": true
			},
			"fs": {
				"all": false,
				"readFile": false,
				"writeFile": false,
				"readDir": false,
				"copyFile": false,
				"createDir": false,
				"removeDir": false,
				"removeFile": false,
				"renameFile": false,
				"exists": false
			},
			"window": {
				"all": false,
				"close": true,
				"hide": true,
				"maximize": true,
				"minimize": true,
				"unmaximize": true,
				"unminimize": true,
				"show": true,
				"startDragging": true,
				"print": false
			},
			"http": {
				"all": false,
				"request": true,
				"scope": ["https://**", "http://localhost:**"]
			}
		},
		"bundle": {
			"active": true,
			"targets": "all",
			"identifier": "com.nodus.security-platform",
			"icon": [
				"icons/32x32.png",
				"icons/128x128.png",
				"icons/128x128@2x.png",
				"icons/icon.icns",
				"icons/icon.ico"
			]
		},
		"security": {
			"csp": "default-src 'self'; script-src 'self' 'unsafe-inline'; style-src 'self' 'unsafe-inline'"
		},
		"windows": [
			{
				"fullscreen": false,
				"resizable": true,
				"title": "Nodus Security Platform",
				"width": 1400,
				"height": 900,
				"minWidth": 800,
				"minHeight": 600
			}
		]
	}
}
